<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_light_blue"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="30dp"
            android:text="장학몬"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/radius_top_10"
            android:backgroundTint="@color/white"
            android:layout_marginHorizontal="20dp"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/white"/>
        <LinearLayout
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:padding="15dp"
            android:layout_marginHorizontal="20dp">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/logofore"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/login_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="아이디"
                android:inputType="textEmailAddress"
                android:textSize="14sp"
                android:paddingStart="10dp"
                android:background="@drawable/radius_10"
                android:backgroundTint="@color/very_light_gray"
                android:layout_marginBottom="10dp"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="비밀번호"
                android:imeActionId="6"
                android:imeOptions="actionUnspecified"
                android:textSize="14sp"
                android:paddingStart="10dp"
                android:background="@drawable/radius_10"
                android:backgroundTint="@color/very_light_gray"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/sign_in_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="로그인"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@drawable/radius_20"/>

                <Button
                    android:id="@+id/sign_up_button"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="회원가입"
                    android:textStyle="bold"
                    android:background="@drawable/radius_20"
                    android:backgroundTint="@color/very_light_gray"
                    android:layout_marginBottom="60dp"
                    />

            </LinearLayout>
        </LinearLayout>




    </LinearLayout>
</LinearLayout>