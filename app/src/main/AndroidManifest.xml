<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.examplekia.myscholarship">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.examplekia.myscholarship.menu.mypage.MyDashboardActivity"></activity>
        <activity android:name="com.examplekia.myscholarship.menu.dashboard.WriteBoardActivity" />
        <activity android:name="com.examplekia.myscholarship.menu.dashboard.BoardActivity" />
        <activity android:name="com.examplekia.myscholarship.login.JoinActivity" />
        <activity android:name="com.examplekia.myscholarship.login.LoginActivity"></activity>
        <activity android:name="com.examplekia.myscholarship.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.examplekia.myscholarship.menu.support.ServiceInfoActivity" />
        <activity android:name="com.examplekia.myscholarship.menu.scholarship.FilterActivity" />
        <activity android:name="com.examplekia.myscholarship.menu.scholarship.InfoActivity" />
        <activity android:name="com.examplekia.myscholarship.MainActivity" />
        <activity android:name="com.examplekia.myscholarship.tutorial.TutorialActivity" />

    </application>

</manifest>